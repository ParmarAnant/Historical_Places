<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_vw"
        style="@style/cardStyleNormal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                style="@style/cardStyleNormal"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/img_place_image"
                    style="@style/img_Inside_Card_Style_Normal"
                    android:layout_height="200dp"
                    android:src="@drawable/india" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_place_text"
                    style="@style/txt_style_normal.black"
                    android:layout_marginBottom="5dp"
                    android:text="Bharat" />

                <TextView
                    android:id="@+id/txt_place_state"
                    style="@style/txt_style_normal"
                    android:drawableLeft="@drawable/ic_location"
                    android:text="Aagra, India" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>